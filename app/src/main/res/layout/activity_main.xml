<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whyte.com.propertyanimation.MainActivity">


    <TextView
        android:id="@+id/tv_p_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property_t"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/btn_p_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="184dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="属性平移"
        app:layout_constraintBottom_toBottomOf="@+id/tv_p_t"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintLeft_toLeftOf="@+id/btn_v_t"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_v_t"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_v_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:text="视图平移"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_t"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <TextView
        android:id="@+id/tv_v_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:text="View_t"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="28dp"
        android:text="视图透明"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_a"
        app:layout_constraintRight_toLeftOf="@+id/btn_p_a"
        app:layout_constraintTop_toBottomOf="@+id/tv_p_t"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_p_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="122dp"
        android:layout_marginTop="28dp"
        android:text="属性透明"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p_t" />

    <TextView
        android:id="@+id/tv_v_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="247dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="51dp"
        android:background="@android:color/holo_red_dark"
        android:text="view_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_p_a" />

    <TextView
        android:id="@+id/tv_p_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="158dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_dark"
        android:text="property_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_p_a" />

</android.support.constraint.ConstraintLayout>
